{% block form_row %}
    <div class="form-group ">
        {%- set widget_attr = {} -%}
        {%- if help is not empty -%}
            {%- set widget_attr = {attr: {'aria-describedby': id ~"_help"}} -%}
        {%- endif -%}

        <div class="col-form-label">
            <strong>{{- form_label(form, null) -}}</strong>
            {{- form_help(form) -}}
        </div>

        <div class="form-group ">
            {{- form_errors(form) -}}
            {{- form_widget(form, widget_attr) -}}

        </div>
    </div>
{% endblock %}